<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light py-4 mb-0"><%= @user.nickname %>さんの会員情報編集</h5>
      <div class="form-body p-4">
        <%= form_with model: @user, url: admin_user_path, method: :patch, local: true do |f| %>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :nickname, class:"form-control", placeholder:"ニックネーム"%>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            </div>
            <%= f.text_field :email, class:"form-control", placeholder:"メールアドレス"%>
          </div>
          <div class="input-group my-3">
            <div class="input-group-prepend">
              <span class="input-group-text mr-3"><i class="fas fa-image"></i></span>
            </div>
            <div class="custom-file">
              <div class="input-group mb-3 mt-4">
                <%= f.file_field :profile_image, accept: "image/*" %>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa-solid fa-user-check"></i></span>
            </div>
            <div class="form-check form-check-inline mx-3">
              <%= f.radio_button :is_deleted, false %>
              <%= f.label :is_deleted, "有効", class: "form-check-label mx-3" %>
            </div>
            <div class="form-check form-check-inline">
              <%= f.radio_button :is_deleted, true %>
              <%= f.label :is_deleted, "退会", class: "form-check-label mx-3" %>
            </div>
          </div>
          <%= f.submit "変更を保存", class:"btn btn-lg btn-info mr-5" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
