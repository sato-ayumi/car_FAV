<div class="card-list-containar d-flex flex-wrap justify-content-around">

  <% reviews.each do |review| %>
    <div class="card mt-4 shadow-lg  mx-3">
      <%= link_to admin_review_path(review) do %>
        <%= image_tag review.review_image, size: "400x400", class: "card-img" %>
      <% end %>
      <div class="card-body bg-dark">
        <div class="row">
          <div class="col-4">
            <%= link_to user_path(review.user) do %>
              <%= image_tag review.user.get_profile_image, size: "50x50", class: "mt-3 rounded-circle" %>
            <% end %>
          </div>
          <div class="col-8">
            <p class="card-text text-light">レビュー評価：<%= render "public/reviews/static_star", review: review %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>
<div class='row justify-content-center my-4'>
  <%= paginate reviews, theme: "twitter-bootstrap-4" %>
</div>


