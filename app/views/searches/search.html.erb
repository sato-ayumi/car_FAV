<div class="container">
  <div class="row mt-5">
    <div class="col-9 offset-1">
      <h3 style="display:inline">
        <% if params[:query].present? %>
          <h3 style="display:inline">
            <%= params[:query] %>の検索結果
          </h3>
        <% elsif params[:tags].present? %>
          <h3 style="display:inline">
            <%= params[:tags] %>の検索結果
          </h3>
        <% end %>
      </h3>
      <h6 style="display:inline;">(全<%= @results.count %>件)</h6>
      <% if @results.empty? %>
        <div class="h4 text-center mt-5">
          該当する投稿はありません
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "public/reviews/index", reviews: @results %>
