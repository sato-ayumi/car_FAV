<% if notice %>
  <div class="alert alert-danger">
    <%= notice %>
  </div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-5 text-center shadow-lg rounded px-0 mx-auto mt-5">

      <h5 class="text-dark bg-light py-4 shadow-sm">サインアップ</h5>

      <div class="form-body p-4">
         <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
         <%= render "devise/shared/error_messages", resource: resource %>

          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
            <%= f.text_field :nickname, class:"form-control", placeholder: "ニックネーム",  required: true %>
          </div>

          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-envelope"></i></span>
            </div>
            <div><%= f.email_field :email, class:"form-control", placeholder: "メールアドレス",  required: true %></div>
          </div>

          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード",  required: true %>
          </div>

          <div class="input-group mb-4">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-check-circle"></i></span>
            </div>
            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword", placeholder:"パスワード確認",  required: true %>
          </div>

          <%= f.submit "サインアップ", class:"btn btn-block btn-info mt-5" %>
        <% end %>
      </div>

    </div>
  </div>
</div>