<div class="card-list-containar py-5">
  <% if reviews.nil? %>
    <% reviews.each do |review| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <%= link_to review_path(review) do %>
        <%= image_tag review.review_image, class:"card-img-top"; %>
      <% end %>
      <div class="card-body bg-dark">
        <div class="row">
          <div class="col-2">
            <%= link_to user_path(review.user) do %>
              <%= image_tag review.user.get_profile_image, size: "50x50", class:"mt-3 rounded-circle";  %>
            <% end %>
          </div>
          <div class="col-10">
            
            <p class="card-text text-light">レビュー評価：<%= render "public/reviews/static_star", review: review %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  <% else %>
    <h3>まだ投稿はありません。</h3>
    <%= link_to new_review_path do %>
      <p>投稿してみましょう！</p>
    <% end %>
  <% end %>
  <%= paginate reviews %>
</div>