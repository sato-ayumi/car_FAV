<%= form_with model: [review, comment] do |f| %>
  <div class="form-group">
    <%= f.label "コメントを投稿する" %>
    <%= f.text_area :comment, class: "form-control", placeholder: "コメントを入力してください",  required: true %>
  </div>
  <div class="text-right mb-5">
    <%= f.submit "コメントする", class: "btn btn-warning text-white" %>
  </div>
<% end %>